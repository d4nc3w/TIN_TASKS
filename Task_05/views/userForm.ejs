<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Add student form</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <h1>Add student</h1>
    <form method="post" action="/addUser">
        <label>First name:</label>
        <span id="errFirstName"> <%= errors.firstName %> </span>
        <input name="firstName" type="text">

        <label>Last name:</label>
        <span id="errLastName"> <%= errors.lastName %> </span>
        <input name="lastName" type="text">

        <label>Birth Year:</label>
        <span id="errBirthYear"> <%= errors.birthYear %> </span>
        <input name="birthYear" type="number" min="1900" max="2024">

        <label>Phone Number:</label>
        <span id="errPhone"> <%= errors.phoneNum %> </span>
        <input name="phoneNum" type="text">

        <label>Email:</label>
        <span id="errEmail"> <%= errors.email %> </span>
        <input name="email" type="text">

        <label>Currently employed?</label>
        <select name="work" required>
            <option>No</option>
            <option>Yes</option>
        </select>

        <input type="submit" type="button">
        <span id="errGeneral"> <%= errors.general %> </span>
    </form>

<!--     <p> <%= values.fn %> </p> -->
<!--     <p> <%= values.ln %> </p> -->
<!--     <p> <%= values.a %> </p> -->
<!--     <p> <%= values.pn %> </p> -->
<!--     <p> <%= values.e %> </p> -->

    <table>
        <tr><td>First Name:</td><td> <%= values.fn %> </td></tr>
        <tr><td>Last Name:</td><td> <%= values.ln %> </td></tr>
        <tr><td>Birth Year:</td><td> <%= values.by %> </td></tr>
        <tr><td>Age:</td><td> <%= values.a %> </td></tr>
        <tr><td>Phone Number:</td><td> <%= values.pn %> </td></tr>
        <tr><td>Email:</td><td> <%= values.e %> </td></tr>
    </table>

</body>
</html>