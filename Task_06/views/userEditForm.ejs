<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="/stylesheets/form.css">
</head>
<body>
<h1>Add user</h1>
<form method="post" action="/editUser/<%= user.userId %>">
    <label>First name:</label>
    <span id="errFirstName"> <%= errors.firstName %> </span>
    <input name="firstName" type="text" value="<%= user.firstName %>">

    <label>Last name:</label>
    <span id="errLastName"> <%= errors.lastName %> </span>
    <input name="lastName" type="text" value="<%= user.lastName %>">

    <label>Birth Year:</label>
    <span id="errBirthYear"> <%= errors.birthYear %> </span>
    <input name="birthYear" type="number" min="1900" max="2024" value="<%= user.birthYear %>">

    <label>Phone Number:</label>
    <span id="errPhone"> <%= errors.phoneNum %> </span>
    <input name="phoneNum" type="text" value="<%= user.phoneNum %>">

    <label>Email:</label>
    <span id="errEmail"> <%= errors.email %> </span>
    <input name="email" type="email" value="<%= user.email %>">

    <label>Country of birth</label>
    <select name="countryId" required>
        <option value="0">Select country</option>
        <option value="1">Poland</option>
        <option value="2">England</option>
        <option value="3">Germany</option>
        <option value="4">France</option>
        <option value="5">Spain</option>
        <option value="6">Italy</option>
        <option value="7">Japan</option>
    </select>
    <span id="errCountry"> <%= errors.countryId %> </span>

    <input type="submit" type="button">
    <span id="errGeneral"> <%= errors.general %> </span>
</form>

</body>
</html>